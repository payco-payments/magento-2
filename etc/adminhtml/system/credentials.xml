<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="credentials" sortOrder="10" showInWebsite="1" showInStore="1" showInDefault="1"
           translate="label">
        <label>Credentials</label>
        <field id="client_id" type="text" sortOrder="10" showInWebsite="1" showInStore="1"
               showInDefault="1" translate="label">
            <label>Client Id</label>
            <config_path>payment/payco_payments/client_id</config_path>
        </field>
        <field id="client_secret" type="obscure" sortOrder="20" showInWebsite="1" showInStore="1"
               showInDefault="1" translate="label">
            <label>Client Secret</label>
            <config_path>payment/payco_payments/client_secret</config_path>
            <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
        </field>
    </group>
</include>
